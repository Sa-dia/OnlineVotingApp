<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp"
    android:background="@drawable/candi_back"
    android:scrollbars="vertical">

    <!-- Title for the Election Results -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Leader Election Result"
        android:textSize="20sp"
        android:textColor="#000000"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_marginBottom="16dp" /> <!-- Margin at the bottom of the title -->

    <!-- Bar Chart for Candidate Votes -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1" /> <!-- Use weight to make the bar chart flexible -->

    <!-- Pie Chart for Total Voters -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChartTotal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1" /> <!-- Use weight to distribute space -->

    <!-- Pie Chart for Male Voters -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChartMale"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1" /> <!-- Use weight to distribute space -->

    <!-- Pie Chart for Female Voters -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChartFemale"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1" /> <!-- Use weight to distribute space -->

</LinearLayout>
