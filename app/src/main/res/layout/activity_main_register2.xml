<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp"
    android:background="@drawable/candi_back"
    android:gravity="center">

    <TextView
        android:id="@+id/registerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voter Register"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/name_icon"
        android:backgroundTint="@color/gray_light" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/email_icon"
        android:backgroundTint="@color/gray_light" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/password_icon"
        android:backgroundTint="@color/gray_light" />

    <EditText
        android:id="@+id/voterIdInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Voter ID"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/id_icon"
        android:backgroundTint="@color/gray_light" />

    <TextView
        android:id="@+id/genderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:gravity="center" />

    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/maleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:layout_marginEnd="10dp" />

        <RadioButton
            android:id="@+id/femaleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:layout_marginEnd="10dp" />

        <RadioButton
            android:id="@+id/otherRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/votingStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voting Status:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginEnd="0dp" />

        <TextView
            android:id="@+id/votingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:backgroundTint="@color/gray_light"
            android:text="No"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:id="@+id/imageUploadLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Your Image"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:gravity="center" />

    <Button
        android:id="@+id/uploadImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse"
        android:backgroundTint="@color/dark_blue"
        android:textColor="@android:color/white"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/darker_gray"
        android:text="Register"
        android:textColor="@android:color/white" />
</LinearLayout>
