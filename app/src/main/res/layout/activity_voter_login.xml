<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/candi_back">

    <!-- Title -->
    <TextView
        android:id="@+id/voterLoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voter Login"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="20dp" /> <!-- Reduced marginBottom -->

    <!-- ImageView for Voter Login -->
    <ImageView
        android:id="@+id/voterLoginImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/account_icon"
    android:contentDescription="Voter Login Image"
    android:layout_gravity="center" />

    <!-- Email Input Field -->
    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/gray_light" />

    <!-- Login Button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Login"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/darker_gray"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp" />

</LinearLayout>
